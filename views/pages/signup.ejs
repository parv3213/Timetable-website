<!DOCTYPE html>
<html lang="en">

<head>
  <title>Sign Up</title>
  <%- include("../partials/head.ejs") -%>
</head>

<body>
  <div id="container">
    <div id="body">
      <%- include("../partials/navbar.ejs")  %>
      <form class="signupBox" method="POST" action="/signup">

        <h1 class="h3 mb-3 mx-auto text-center">Sign Up</h1>
        <input type="text" name="name" id="inputName" class="form-control" placeholder="Name" required autofocus>
        <input type="text" name="rno" id="inputRno" class="form-control" placeholder="Enrollment Number" required>
        <input type="email" name="email" id="inputEmail" class="form-control" placeholder="Email address" required>
        <input type="password" name="password" id="inputPassword" class="form-control mb-3" placeholder="Password" required>
        <button class="btn btn-lg btn-primary btn-block" type="submit">Sign in</button>

      </form>
    </div>
    <%- include("../partials/footer.ejs")  %>
  </div>
</body>

</html>